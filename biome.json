{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useSemanticElements": "off",
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noRedeclare": "off",
        "noAssignInExpressions": "off",
				"noDuplicateAtImportRules": "error"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"nursery": {
				"useSortedClasses": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off",
				"noParameterAssign": "off",
				"useImportType": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"lineWidth": 80,
			"trailingCommas": "all"
		}
	}
}